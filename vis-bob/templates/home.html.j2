
{% extends 'layout.html.j2' %}

{% block title %} Home {% endblock %}



{% block content %}


  <div class="container">
    
    <div class="row">
      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <h4 class="text-center">Clusters</h4>
        <div id="scatter"></div>  
        
        <hr />
        
        <div class="panel panel-info cluster-info display-none">
          <div class="panel-heading">
            <h3 class="panel-title">Cluster #<span class="cluster_id"></span></h3>
          </div>
          <div class="panel-body">
              <table class="table table-hover cluster-table">
                <thead>
                  <tr>
                    <th>Cluster</th>
                    <th>Count</th>
                    <th>Words</th>
                  </tr>
                </thead>
                <tbody></tbody>
              </table>
          </div>
        </div>

      </div>
      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <h4 class="text-center display-none cluster-detail-title">Companies of Cluster #<span class="cluster_id"></span></h4>
        <div id="scatter2"></div> 

        <hr />
        
        <div class="panel panel-info cluster-detail display-none">
          <div class="panel-heading">
            <h3 class="panel-title">#<span class="cluster_id"></span> Cluster Selected Company</h3>
          </div>
          <div class="panel-body">
              <table class="table table-hover cluster-detail-table">
                <thead>
                  <tr>
                    <th>Cluster</th>
                    <th>Company id</th>
                    <th>Company Name</th>
                  </tr>
                </thead>
                <tbody></tbody>
              </table>
          </div>
        </div>         
      </div>
    </div>   
  </div>


{% endblock %}
  
{% block scripts %}  

  {{ super() }}
  <script src="{{ url_for('static', filename='js/tips.js') }}"></script>
  <script src="{{ url_for('static', filename='js/my_2d.js') }}"></script>

{% endblock %}

  
    
